        string "MQTT Broker URI"
        default "mqtt://192.168.1.100"
        help
            URL of the MQTT broker.

    config MQTT_USER
        string "MQTT Username"
        default "domator"
        help
            Username for MQTT authentication.

    config MQTT_PASSWORD
        string "MQTT Password"
        default "domator"
        help
            Password for MQTT authentication.

    config MESH_ID
        string "Mesh ID"
        default "DMESH0"
        help
            Mesh network ID (exactly 6 ASCII characters).
            This is used as a binary identifier for the mesh network.
            Example: "DMESH0" or "MESH:1"

    config MESH_AP_PASSWD
        string "Mesh AP Password"
        default "domator"
        help
            Password for Mesh authentication

    config MESH_AP_CONNECTIONS
        int "Max mesh AP connections"
        default 6

    config MESH_MAX_LAYER
        int "Max mesh layers"
        default 6
